<resources>

    <style name="Widget.Theme.TravelSmartPlus.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.TravelSmartPlus.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!-- Search bar style  -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:padding">0dp</item>
        <item name="android:searchIcon">@null</item>
        <item name="android:background">@drawable/search_bar_background</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@null</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

</resources>