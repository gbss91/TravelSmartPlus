<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/default_margin"
    android:scrollbars="none"
    android:background="@color/white"
    tools:context=".fragments.SetupPreferencesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/default_margin"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small_margin"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/preferences_setup_title"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xsmall_margin"
            android:fontFamily="@font/roboto"
            android:text="@string/preferences_setup_text"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text" />

        <!-- Preferred Airlines -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/airlines_setup"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/subtitle_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xsmall_margin"
            android:fontFamily="@font/roboto"
            android:text="@string/airlines_setup_text"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstPreferredAirlineContainer"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_input"
            android:layout_marginTop="@dimen/xxsmall_margin"
            android:hint="@string/top_1"
            android:labelFor="@id/firstAirline"
            app:boxBackgroundColor="@android:color/transparent"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp">

            <AutoCompleteTextView
                android:id="@+id/firstAirline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/input_text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/secondPreferredAirlineContainer"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_input"
            android:layout_marginTop="@dimen/xxsmall_margin"
            android:hint="@string/top_2"
            android:labelFor="@id/secondAirline"
            app:boxBackgroundColor="@android:color/transparent"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp">

            <AutoCompleteTextView
                android:id="@+id/secondAirline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/input_text"/>

        </com.google.android.material.textfield.TextInputLayout>


        <!-- Preferred Hotels -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/hotels_setup"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/subtitle_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xsmall_margin"
            android:fontFamily="@font/roboto"
            android:text="@string/hotels_setup_text"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstPreferredHotelContainer"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_input"
            android:layout_marginTop="@dimen/xxsmall_margin"
            android:hint="@string/top_1"
            android:labelFor="@id/firstHotel"
            app:boxBackgroundColor="@android:color/transparent"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp">

            <AutoCompleteTextView
                android:id="@+id/firstHotel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/input_text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/secondPreferredHotelContainer"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_input"
            android:layout_marginTop="@dimen/xxsmall_margin"
            android:hint="@string/top_2"
            android:labelFor="@id/secondHotel"
            app:boxBackgroundColor="@android:color/transparent"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp">

            <AutoCompleteTextView
                android:id="@+id/secondHotel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/input_text"/>

        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/preferencesSetupBtn"
            android:layout_width="@dimen/default_button_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="60dp"
            android:fontFamily="@font/roboto_bold"
            android:padding="@dimen/default_button_padding"
            android:text="@string/btn_setup_next"
            android:textColor="@color/white"
            app:cornerRadius="25dp"
            tools:ignore="DuplicateSpeakableTextCheck" />


    </LinearLayout>
</ScrollView>